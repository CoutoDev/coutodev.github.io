---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en" class="bg-gray-900 text-gray-100">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="min-h-screen flex flex-col">
		<Header />
		<main class="flex-grow container mx-auto px-4 py-8">
			<section class="max-w-3xl mx-auto">
				<h2 class="text-3xl font-bold font-atkinson text-white mb-8">Blog Posts</h2>
				<ul class="space-y-6">
					{
						posts.map((post) => (
							<li class="group">
								<a 
									href={`/blog/${post.id}/`}
									class="block p-4 rounded-lg border border-green-500/20 hover:border-green-500/40 hover:bg-gray-800/50 transition-all"
								>
									<h3 class="text-xl font-atkinson font-bold text-green-400 group-hover:text-green-300 transition-colors">
										{post.data.title}
									</h3>
									<p class="text-gray-400 font-atkinson mt-2">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
